<p style="color: green"><%= notice %></p>

<% content_for :title, "Candidatos" %>

<h1>Candidatos</h1>

<%= form_with url: candidatos_path, method: :get, local: true do %>
  <%= label_tag :query, "Buscar" %>
  <%= text_field_tag :query, params[:query] %>
  <%= submit_tag "Buscar" %>
<% end %>

<div id="candidatos">
  <% @candidatos.each do |candidato| %>
    <%= render candidato %>
    <p>
      <%= link_to "Show this candidato", candidato %>
    </p>
  <% end %>
</div>

<%= link_to "New candidato", new_candidato_path %>
